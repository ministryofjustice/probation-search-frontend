{
  "compilerOptions": {
    /* Base Options: */
    "target": "es2022",
    "lib": ["es2022"],
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    /* Transpiling with TypeScript: */
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
  }
}